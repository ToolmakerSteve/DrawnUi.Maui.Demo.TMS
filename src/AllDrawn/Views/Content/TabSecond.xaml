                        Type="Linear">
                        <draw:SkiaGradient.Colors>
                            <Color>#222222</Color>
                            <Color>#886655</Color>
                        </draw:SkiaGradient.Colors>
                    </draw:SkiaGradient>

                </draw:SkiaControl.FillGradient>

